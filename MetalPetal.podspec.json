{
  "name" : "MetalPetal",
  "swift_version" : "5.0",
  "summary" : "GPU-accelerated image and video processing framework based on Metal.",
  "requires_arc" : true,
  "license" : {
    "type" : "MIT"
  },
  "prefix_header_file" : false,
  "swift_versions" : "5.0",
  "platforms" : {
    "ios" : "10.0",
    "osx" : "10.13",
    "tvos" : "13.0"
  },
  "authors" : {
    "YuAo" : "me@imyuao.com"
  },
  "module_map" : "Frameworks\/MetalPetal\/MetalPetal.modulemap",
  "source" : {
    "tag" : "1.15.0",
    "git" : "https:\/\/github.com\/MetalPetal\/MetalPetal.git"
  },
  "version" : "1.15.0",
  "subspecs" : [
    {
      "private_header_files" : [
        "Frameworks\/MetalPetal\/MTIPrint.h",
        "Frameworks\/MetalPetal\/MTIDefer.h",
        "Frameworks\/MetalPetal\/MTIHasher.h",
        "Frameworks\/MetalPetal\/MTIImageRenderingContext+Internal.h",
        "Frameworks\/MetalPetal\/MTIBlendFormulaSupport.h"
      ],
      "prefix_header_file" : false,
      "libraries" : "c++",
      "name" : "Core",
      "pod_target_xcconfig" : {
        "CLANG_CXX_LANGUAGE_STANDARD" : "c++14"
      },
      "source_files" : "Frameworks\/MetalPetal\/**\/*.{h,m,c,mm,metal}",
      "weak_frameworks" : [
        "MetalPerformanceShaders",
        "MetalKit"
      ]
    },
    {
      "source_files" : "Frameworks\/MetalPetal\/**\/*.{swift}",
      "dependencies" : {
        "MetalPetal\/Core" : [

        ]
      },
      "prefix_header_file" : false,
      "weak_frameworks" : [
        "MetalPerformanceShaders",
        "MetalKit"
      ],
      "name" : "Swift"
    },
    {
      "name" : "AppleSilicon",
      "tvos" : {
        "script_phases" : {
          "name" : "Build Metal Library - MSL 2.3",
          "script" : "xcrun metal -target \"air64-${LLVM_TARGET_TRIPLE_VENDOR}-${LLVM_TARGET_TRIPLE_OS_VERSION}${LLVM_TARGET_TRIPLE_SUFFIX}\" -ffast-math -std=ios-metal2.3 -o \"${METAL_LIBRARY_OUTPUT_DIR}\/default.msl23.metallib\" \"${PODS_TARGET_SRCROOT}\/Shaders\/\"*.metal",
          "execution_position" : "after_compile"
        }
      },
      "osx" : {
        "script_phases" : {
          "name" : "Build Metal Library - MSL 2.3",
          "script" : "xcrun metal -target \"air64-${LLVM_TARGET_TRIPLE_VENDOR}-${LLVM_TARGET_TRIPLE_OS_VERSION}${LLVM_TARGET_TRIPLE_SUFFIX}\" -ffast-math -std=macos-metal2.3 -o \"${METAL_LIBRARY_OUTPUT_DIR}\/default.msl23.metallib\" \"${PODS_TARGET_SRCROOT}\/Shaders\/\"*.metal",
          "execution_position" : "after_compile"
        }
      },
      "ios" : {
        "script_phases" : {
          "name" : "Build Metal Library - MSL 2.3",
          "script" : "xcrun metal -target \"air64-${LLVM_TARGET_TRIPLE_VENDOR}-${LLVM_TARGET_TRIPLE_OS_VERSION}${LLVM_TARGET_TRIPLE_SUFFIX}\" -ffast-math -std=ios-metal2.3 -o \"${METAL_LIBRARY_OUTPUT_DIR}\/default.msl23.metallib\" \"${PODS_TARGET_SRCROOT}\/Shaders\/\"*.metal",
          "execution_position" : "after_compile"
        }
      },
      "prefix_header_file" : false,
      "dependencies" : {
        "MetalPetal\/Core" : [

        ]
      }
    },
    {
      "name" : "Static",
      "osx" : {
        "pod_target_xcconfig" : {
          "METAL_LIBRARY_OUTPUT_DIR" : "${TARGET_BUILD_DIR}\/MetalPetal.bundle\/Contents\/Resources"
        }
      },
      "prefix_header_file" : false,
      "weak_frameworks" : [
        "MetalPerformanceShaders",
        "MetalKit"
      ],
      "ios" : {
        "pod_target_xcconfig" : {
          "METAL_LIBRARY_OUTPUT_DIR" : "${TARGET_BUILD_DIR}\/MetalPetal.bundle\/"
        }
      },
      "dependencies" : {
        "MetalPetal\/Core" : [

        ]
      },
      "tvos" : {
        "pod_target_xcconfig" : {
          "METAL_LIBRARY_OUTPUT_DIR" : "${TARGET_BUILD_DIR}\/MetalPetal.bundle\/"
        }
      },
      "resource_bundles" : {
        "MetalPetal" : [
          "Frameworks\/MetalPetal\/CocoaPodsBundledResourcePlaceholder"
        ]
      },
      "pod_target_xcconfig" : {
        "GCC_PREPROCESSOR_DEFINITIONS" : "METALPETAL_DEFAULT_LIBRARY_IN_BUNDLE=1"
      }
    }
  ],
  "homepage" : "https:\/\/github.com\/MetalPetal\/MetalPetal",
  "default_subspecs" : "Core"
}